[Unit]
Description = Zookeeper centralized coordination service
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node.kzookeeper.user %>
PIDFile = <%= node.kzookeeper.base_dir %>/data/zookeeper_server.pid
ExecStart = <%= node.kzookeeper.base_dir %>/bin/zookeeper-start.sh
ExecStop = <%= node.kzookeeper.base_dir %>/bin/zookeeper-stop.sh

Type = forking

[Install]
WantedBy = multi-user.target
